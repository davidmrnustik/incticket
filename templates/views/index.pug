extends ../layouts/default

block content
	.container: .jumbotron
		img(src='/images/logo.svg', width='160')
		h1 Ticket Management
		p Demo project build on <a href='http://keystonejs.com' target='_blank'>KeystoneJS</a>.
		hr
		if user
			if user.canAccessKeystone
				p
					a(href='/keystone').btn.btn-primary Open the Admin UI
			p
				a(href='/tickets').btn.btn-primary All Tickets
				|  See all tickets in system
			p
				a(href='/mytickets').btn.btn-primary My Tickets
				|  See tickets assigned to me.
			p
				a(href='/projects').btn.btn-primary Projects
				|  Browse all published projects.

		else
			p
				a(href='/signin', style='margin-right: 10px').btn.btn-primary Sign in
				| to manage tickets.
