extends ../../layouts/default

block content
	.container: .panel.panel-primary
		.panel-heading My tickets
		if data.tickets.length > 0
			.panel-body
				p These are tickets assigned to #{data.user.fullname}

			table.table.table-striped
				for ticket in data.tickets
					tr: td
						.col-md-1
							span.label.label-info.pull-left #{ticket.status}
						a.ticket-title(href=ticket.url): strong #{ticket.title}
						
						+ticket(ticket)
		else
			.panel-body
				p There are no tickets assigned to #{data.user.fullname}
		.panel-footer